<div class='well'>
  <%= form_for @user do |f| %>
    <%= render '/shared/error', obj: @user %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password, value: params[:password] || '' %>
    </div>

    <div class='control-group'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, value: params[:password_confirmation] or '' %>
    </div>

    <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone %>
    </div>

    <%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class:'btn btn-success' %>
  <% end %>
</div>
