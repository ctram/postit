<div class='well'>
  <%= form_for @user do |f| %>
    <%= render '/shared/error', obj: @user %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password, value: params[:password] || '' %>
    </div>

    <% if @user.new_record? %>
      <div class='control-group'>
        <%= f.label :password_confirm %>
        <%= f.password_field :password_confirmation, value: params[:password_confirmation] or '' %>
      </div>
    <% end %>

    <%= f.submit @user.new_record? ? 'Register' : 'Update Profile', class:'btn btn-success' %>
  <% end %>
</div>
